{
    "extends": ["eslint:recommended", "prettier", "plugin:@typescript-eslint/recommended"],
    "env": {
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint/eslint-plugin", "simple-import-sort"],
    "rules": {
        "eqeqeq": "error",
        "no-constant-condition": 0,
        "no-inner-declarations": 0,
        "no-undef": 0,
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "@typescript-eslint/no-explicit-any": 0,
        "@typescript-eslint/no-namespace": 0,
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": [
                    "classProperty",
                    "typeProperty",
                    "parameterProperty",
                    "classMethod",
                    "typeMethod",
                    "accessor"
                ],
                "modifiers": ["private"],
                "leadingUnderscore": "require",
                "format": ["camelCase"],
                "filter": {
                    "regex": "^(test_| )",
                    "match": false
                }
            },
            {
                "selector": [
                    "classProperty",
                    "typeProperty",
                    "parameterProperty",
                    "classMethod",
                    "typeMethod",
                    "accessor"
                ],
                "modifiers": ["protected"],
                "leadingUnderscore": "allow",
                "format": ["camelCase"],
                "filter": {
                    "regex": "^(test_| )",
                    "match": false
                }
            },
            {
                "selector": [
                    "classProperty",
                    "typeProperty",
                    "parameterProperty",
                    "classMethod",
                    "typeMethod",
                    "accessor"
                ],
                "modifiers": ["public"],
                "leadingUnderscore": "forbid",
                "format": ["camelCase"],
                "filter": {
                    "regex": "^(test_| )",
                    "match": false
                }
            }
        ]
    }
}
